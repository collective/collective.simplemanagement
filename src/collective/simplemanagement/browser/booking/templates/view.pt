<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.simplemanagement">

  <metal:block fill-slot="top_slot"
               tal:define="dummy python:request.set('disable_border',1)" />
<body>

<metal:content-core fill-slot="main">

  <div id="booking-view" tal:define="info view/info">

    <h1>
        <span i18n:translate="">Project:</span>
        <a tal:attributes="href info/project/absolute_url"
           tal:content="info/project/Title">
           Project
        </a>
    </h1>

    <h2>
        <span i18n:translate="">Story:</span>
        <a tal:attributes="href info/story/absolute_url"
           tal:content="info/story/Title">
           Story
        </a>
    </h2>

    <p>
        <span class="label" i18n:translate="">Creator:</span>
        <span tal:content="info/creator/fullname" />
    </p>

    <p>
        <span class="label" i18n:translate="">Time:</span>
        <span tal:content="info/time" />
    </p>

    <p>
        <span class="label" i18n:translate="">Date:</span>
        <span tal:content="info/date" />
    </p>

    <p tal:content="structure info/text" />

    <a class="button btn"
       tal:condition="info/can_edit"
       tal:attributes="href info/edit_url"
       i18n:translate="">Edit</a>

  </div>

</metal:content-core>

</body>
</html>

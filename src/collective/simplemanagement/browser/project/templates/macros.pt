<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  i18n:domain="collective.simplemanagement"
  tal:omit-tag="">


  <metal:stories define-macro="iteration-compact">
    <tal:iteration
      define="totals iteration/totals">
        <h2>
          <a href=""
             title=""
             tal:attributes="href iteration/absolute_url;
                             title iteration/Description">
            <span tal:content="iteration/title" />
            (<span
                tal:content="python:context.toLocalizedTime(iteration.start.isoformat())"/>
            -
             <span
                tal:content="python:context.toLocalizedTime(iteration.end.isoformat())" />)
          </a>
        </h2>

        <div tal:attributes="data-iterationurl iteration/absolute_url">
          <metal:stories
            use-macro="context/iteration_macros/stories" />
        </div>
    </tal:iteration>
  </metal:stories>

</html>

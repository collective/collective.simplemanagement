<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.simplemanagement">
<body>
<metal:title fill-slot="content-title" />

<metal:content-core fill-slot="content-core">
  <metal:block define-macro="content-core"
    tal:define="portal_state nocall:context/@@plone_portal_state">

  <div id="project-view">

    <div class="project-iterations"
        tal:attributes="data-projecturl context/absolute_url">
      <div id="project-totals">
        <table class="grid">
          <tr>
            <th i18n:translate="">Estimate</th>
            <td class="data numeric-data"
                data-bind="text: estimate_str,
                           css: time_status"></td>

          </tr>
          <tr>
            <th i18n:translate="">Done</th>
            <td class="data numeric-data"
                data-bind="text: hours_str,
                           css: time_status"></td>
          </tr>
        </table>
      </div>

      <!-- ko if: iterations().length > 0 -->
      <div class="iterations"
           data-bind="foreach: iterations">
        <!-- ko if: is_current -->
        <h2>
          <a data-bind="attr {href: url},
                        title: description">
            <span data-bind="text: title">Iteration</span>
            (<span data-bind="text: start"
              ></span>&nbsp;-&nbsp;<span
              data-bind="text: end"></span>)
          </a>
        </h2>

        <metal:stories
            use-macro="context/iteration_macros/stories" />
        <!-- /ko -->

      </div>
      <!-- /ko -->

      <!-- ko if: iterations().length == 0 -->
      <div>
        <div class="portalMessage">
          <div i18n:translate="no_current_iteration">
            There are no current iterations.<br/>To list all iterations
            <a href="alliterations">click here</a>
          </div>
          <div i18n:translate="add_iteration">
            To add a new iteration <a href="++add++Iteration"
              >click here</a>
          </div>
        </div>
      </div>
      <!-- /ko -->

      <div class="visualClear"><!-- clear floats--></div>
    </div>

    <tal:content
       tal:content="structure context/@@overview" />

  </div>

  </metal:block>
</metal:content-core>

</body>
</html>
